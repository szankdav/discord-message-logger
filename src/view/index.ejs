<!doctype html>
<html lang="en">

<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Discord logger statisztika</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
</head>

<body>
    <div class="container">
        <div class="row">
            <div class="col-12 d-grid gap-2 d-md-block">
                <button class="btn btn-success" onclick="toggleTable('messagesTable')">Összes üzenet</button>
                <button class="btn btn-success" onclick="toggleTable('lettersTable')">Betűk</button>
            </div>
        </div>
        <div class="row">
            <div id="messagesTable" class="col-12">
                <table class="table table-striped">
                    <thead>
                        <tr>
                            <th>ID</th>
                            <th>Author</th>
                            <th>Message content</th>
                            <th>Time</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% messages.forEach(row=> { %>
                            <tr>
                                <td>
                                    <%= row.id%>
                                </td>
                                <td>
                                    <%= row.author %>
                                </td>
                                <td>
                                    <%= row.message %>
                                </td>
                                <td>
                                    <% const createdAt=new Date(row.createdAt) %>
                                        <%= createdAt.toLocaleString() %>
                                </td>
                            </tr>
                            <% }) %>
                    </tbody>
                </table>
            </div>
        </div>
        <div class="row">
            <div id="lettersTable" class="col-12 d-none">
                <table class="table table-striped">
                    <thead>
                        <tr>
                            <th>ID</th>
                            <th>Author</th>
                            <th>Letter</th>
                            <th>Count</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% letters.forEach(row=> { %>
                            <tr>
                                <td>
                                    <%= row.id%>
                                </td>
                                <td>
                                    <%= row.author %>
                                </td>
                                <td>
                                    <%= row.letter %>
                                </td>
                                <td>
                                    <%= row.count %>
                                </td>
                            </tr>
                            <% }) %>
                    </tbody>
                </table>
            </div>
        </div>
    </div>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz"
        crossorigin="anonymous"></script>
    <script>
        function toggleTable(tableId) {
            document.getElementById('messagesTable').classList.add('d-none');
            document.getElementById('lettersTable').classList.add('d-none');
            document.getElementById(tableId).classList.remove('d-none');
        }
    </script>
</body>

</html>